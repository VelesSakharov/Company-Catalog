<% provide(:title, "Department info") %>

<table>
  <thead>
  <th>Name</th>
  <th>Description</th>
  <th>Owner</th>
  <th>Created</th>
  </thead>

  <tbody>
  <% if @department.company_id.equal?(@company.id) %>
  <tr>
        <td><%= @department.name %></td>
        <td><%= @department.description%> </td>
        <td><%= @company.name%> </td>
        <td><%= @department.created_at%> </td>
        <td><%= link_to "Edit", edit_company_department_path(@department.company_id.to_c, @department) %></td>
        <td><%= link_to "Remove", company_department_path, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
<%end%>
  </tbody>
</table>

<br>
<center>
  <%= button_to "Department List", company_departments_path, :class => "button", :method => :get  %>
</center>
</br>

