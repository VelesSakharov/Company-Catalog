<% provide(:title, "Company info") %>

<table>
  <thead>

  <th>Name</th>
  <th>Location</th>
  <th>Contacts</th>
  <th>Type</th>
  <th>Created</th>

  </thead>

  <tbody>

      <tr>
        <td><%= @company.name %></td>
        <td><%= @company.location%> </td>
        <td><%= @company.contacts %></td>
        <td><%= @company.ownership%> </td>
        <td><%= @company.created_at%> </td>
        <td><%= link_to "Edit", edit_company_path(@company) %></td>
        <td><%= link_to "Remove", @company, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>

  </tbody>
</table>

<br>
  <center>
    <%= button_to "Company List", companies_path, :class => "button", :method => :get  %>
  </center>
</br>

