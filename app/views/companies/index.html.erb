<h1>Companies#index</h1>
<table>
  <thead>
  <th>Name</th>
  <th>Location</th>
  <th>Contacts</th>
  <th>Type</th>
  <th>Created</th>
  </thead>
  <tbody>
  <% @companies.each do |company| %>
      <tr>

        <td><%= company.company_name %></td>
        <td><%= company.company_location%> </td>
        <td><%= company.company_contacts %></td>
        <td><%= company.company_type%> </td>
        <td><%= company.created_at%> </td>
        <td><%= link_to "Edit", edit_company_path(company) %></td>
        <td><%= link_to "Remove", company, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br><center><%= button_to "New Company", new_company_path, :class => "button", :method => :get  %></center></br>

<p>Find me in app/views/companies/index.html.erb</p>

