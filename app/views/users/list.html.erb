<% provide(:title, 'Users list(admin only)') %>
<table class='table table-hover'>
  <thead>
  <th>Name</th>
  <th>Admin?</th>
  <th>Toggle rights</th>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <% if signed_in? && current_user.admin?%>
            <td><%= link_to 'Toggle admin rights', user_path(user), method: :patch, class: 'btn btn-info' %></td>
            <td><%= link_to 'Remove', user_path(user), method: :delete, data: {confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= button_to 'Companies', companies_path, class: 'button', method: :get %>
</br>
