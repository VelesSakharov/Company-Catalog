<% provide(:title, 'Employee list') %>

<table class='table table-hover'>

  <thead>
  <th>Name</th>
  <th>Birth date</th>
  <th>Company</th>
  <th>Contacts</th>
  <th>Education</th>
  <th>Last work</th>
  <th>Position</th>
  <th>Status</th>
  <th>Created</th>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.birth %></td>
        <td><%= user.company.name %></td>
        <td><%= user.contacts %></td>
        <td><%= user.education %></td>
        <td><%= user.lastwork %></td>
        <td><%= user.position.name %></td>
        <td><%= user.status %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to 'Edit', edit_company_user_path(user.company_id.to_c, user) %></td>
        <td><%= link_to 'Remove', company_user_path(user.company_id.to_c, user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

  <% end %>
  </tbody>
</table>

<br><center>
  <%= button_to 'New Employee', new_company_user_path, class: 'button', method: :get %>
</center></br>

<br>
<%= button_to 'Companies', companies_path, class: 'button', method: :get %>
</br>
