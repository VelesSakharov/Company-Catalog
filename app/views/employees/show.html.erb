<% provide(:title, 'Employee info') %>

<table>
  <thead>
    <th>Name</th>
    <th>Birth date</th>
    <th>Company</th>
    <th>Contacts</th>
    <th>Education</th>
    <th>Last work</th>
    <th>Position</th>
    <th>Status</th>
    <th>Created</th>
  </thead>

  <tbody>
    <tr>
      <td><%= @employee.name %></td>
      <td><%= @employee.birth%> </td>
      <td><%= @employee.company.name%> </td>
      <td><%= @employee.contacts%> </td>
      <td><%= @employee.education%> </td>
      <td><%= @employee.lastwork%> </td>
      <td><%= @employee.position.name%> </td>
      <td><%= @employee.status%></td>
      <td><%= @employee.created_at%> </td>
      <td><%= link_to 'Edit', edit_company_employee_path(@employee.company_id.to_c, @employee) %></td>
      <td><%= link_to 'Remove', company_employee_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
</table>

<br><center>
  <%= button_to 'Employee List', company_employees_path, class: 'button', method: :get  %>
</center></br>
