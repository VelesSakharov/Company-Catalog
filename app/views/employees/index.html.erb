<% provide(:title, 'Employee list') %>

<table class='table table-hover'>
  <thead>
    <th>Name</th>
    <th>Birth date</th>
    <th>Company</th>
    <th>Contacts</th>
    <th>Education</th>
    <th>Last work</th>
    <th>Position</th>
    <th>Status</th>
    <th>Created</th>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.birth %></td>
          <td><%= employee.company.name %></td>
          <td><%= employee.contacts %></td>
          <td><%= employee.education %></td>
          <td><%= employee.lastwork %></td>
          <td><%= employee.position.name %></td>
          <td><%= employee.status %></td>
          <td><%= employee.created_at %></td>
          <% if signed_in? && current_user.admin?%>
            <td><%= link_to 'Edit', edit_company_employee_path(employee.company_id, employee) %></td>
            <td><%= link_to 'Remove', company_employee_path(employee.company_id, employee), method: :delete, data: {confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br><center>
  <%= button_to 'New Employee', new_company_employee_path, class: 'button', method: :get %>
</center></br>

<br>
  <%= button_to 'Companies', companies_path, class: 'button', method: :get %>
</br>
