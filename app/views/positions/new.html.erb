<% provide(:title, 'New position') %>
<% if signed_in? %>
  <div class='col-sm-8'>
    <%= form_for @position do |position| %>

        <%= position.label 'name(required)' %>
        <%= position.text_field :name, required: true %>

        <%= position.label :description %>
        <%= position.text_field :description %>


        <br><center>
          <%= position.submit 'Save changes', class: 'button', data: { disable_with: 'Wait...' }  %>
        </center></br>

    <% end %>
    <%= link_to 'Back', url_for(:back) %>
<% end %>

  <% if @position.errors.any? %>
      <% @position.errors.full_messages.each do |error| %>
        <% flash[:alert] = error %>
      <% end %>
  <% end %>
</div>
