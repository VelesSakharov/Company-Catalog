<% provide(:title, "Departments list") %>


<table class="table table-hover">
  <thead>
  <th>Name</th>
  <th>Description</th>
  <th>Created</th>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
            <tr>
              <td><%= position.name %></td>
              <td><%= position.description %></td>
              <td><%= position.created_at%> </td>
              <td><%= link_to "Edit", edit_position_path(position)%></td>
              <td><%= link_to "Remove", position, method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
    <%end%>
  </tbody>

</table>

<br><center>
  <%= button_to "New Position", new_position_path, :class=>"button", :method => :get  %>
</center></br>

<br><center>
<%= button_to "Companies", companies_path, :class=>"button", :method => :get  %>
</center></br>
