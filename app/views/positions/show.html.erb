<% provide(:title, 'Department info') %>

<table>
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Owner</th>
    <th>Created</th>
  </thead>

  <tbody>
    <tr>
      <td><%= @position.name %></td>
      <td><%= @position.description %> </td>
      <td><%= @position.created_at %> </td>
      <% if signed_in? && current_user.admin?%>
        <td><%= link_to 'Edit', edit_position_path %></td>
        <td><%= link_to 'Remove', company_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<br><center>
  <%= button_to 'Positions List', positions_path, class: 'button', method: :get %>
</center></br>
